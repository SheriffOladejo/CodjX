{
	"comments": {
		"lineComment": "@REM"
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{ "open": "[", "close": "]" },
		{ "open": "{", "close": "}" },
		{ "open": "(", "close": ")" },
		{ "open": "\"", "close": "\"", "notIn": ["string"] }
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["%", "%"],
		["\"", "\""]
	],
	"folding": {
		"markers": {
			"start": "^\\s*(::|REM|@REM)\\s*#region",
			"end": "^\\s*(::|REM|@REM)\\s*#endregion"
		}
	}
}